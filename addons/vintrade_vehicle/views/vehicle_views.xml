<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <!-- Action + Menu -->
  <record id="action_vin_vehicle" model="ir.actions.act_window">
    <field name="name">Vehicles</field>
    <field name="res_model">vin.vehicle</field>
    <field name="view_mode">tree,form,kanban,search</field>
  </record>

  <menuitem id="menu_vin_root" name="VIN Trade" sequence="10"/>
  <menuitem id="menu_vin_vehicle" name="Vehicles" parent="menu_vin_root" action="action_vin_vehicle" sequence="10"/>

  <!-- Search -->
  <record id="view_vin_vehicle_search" model="ir.ui.view">
    <field name="name">vin.vehicle.search</field>
    <field name="model">vin.vehicle</field>
    <field name="arch" type="xml">
      <search>
        <field name="vin"/>
        <field name="name"/>
        <field name="make"/>
        <field name="model"/>
        <filter string="Valid VIN" name="vin_ok" domain="[('vin_ok','=',True)]"/>
        <filter string="DG" name="dg" domain="[('is_dg','=',True)]"/>
        <filter string="Total Loss" name="totloss" domain="[('total_loss','=',True)]"/>
      </search>
    </field>
  </record>

  <!-- List -->
  <record id="view_vin_vehicle_tree" model="ir.ui.view">
    <field name="name">vin.vehicle.tree</field>
    <field name="model">vin.vehicle</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name"/>
        <field name="vin"/>
        <field name="vin_ok"/>
        <field name="year"/>
        <field name="make"/>
        <field name="model"/>
        <field name="exterior_color"/>
        <field name="distance_travelled"/>
        <field name="distance_uom"/>
        <field name="purchase_date"/>
        <field name="purchase_price"/>
        <field name="total_cost"/>
        <field name="buyer_partner_id"/>
        <field name="expected_sale_price"/>
        <field name="sale_price"/>
        <field name="repair_estimate"/>
        <field name="profit"/>
        <field name="is_dg"/>
        <field name="total_loss"/>
        <field name="state"/>
      </tree>
    </field>
  </record>

  <!-- Form -->
  <record id="view_vin_vehicle_form" model="ir.ui.view">
    <field name="name">vin.vehicle.form</field>
    <field name="model">vin.vehicle</field>
    <field name="arch" type="xml">
      <form string="Vehicle">
        <header>
          <button name="action_decode_vin" type="object" string="Decode VIN" class="btn-secondary" invisible="not vin"/>
          <button name="action_mark_purchased" type="object" string="Purchased" class="btn-primary" invisible="state != 'draft'"/>
          <button name="action_mark_enroute" type="object" string="En Route" invisible="state != 'purchased'"/>
          <button name="action_mark_warehouse" type="object" string="At Warehouse" invisible="state != 'enroute'"/>
          <button name="action_mark_shipped" type="object" string="Shipped" invisible="state != 'warehouse'"/>
          <button name="action_mark_delivered" type="object" string="Delivered" invisible="state != 'shipped'"/>
          <field name="state" widget="statusbar" statusbar_visible="draft,purchased,enroute,warehouse,shipped,delivered,cancelled"/>
        </header>

        <sheet>
          <div class="oe_button_box" name="button_box">
            <button class="oe_stat_button" type="object" name="action_open_attachments" icon="fa-paperclip">
              <field name="attachment_count" widget="statinfo" string="Documents"/>
            </button>
            <button class="oe_stat_button" type="object" name="action_create_vendor_bill" icon="fa-file-text-o">
              <field name="vendor_bill_id" string="Vendor Bill" widget="statinfo"/>
            </button>
            <button class="oe_stat_button" type="object" name="action_create_customer_invoice" icon="fa-file-text">
              <field name="customer_invoice_id" string="Customer Invoice" widget="statinfo"/>
            </button>
          </div>

          <group>
            <group>
              <field name="name" readonly="1"/>
              <field name="vin" required="1"/>
              <field name="vin_ok" readonly="1"/>
              <field name="year"/>
              <field name="make"/>
              <field name="model"/>
              <field name="trim"/>
              <field name="body_type"/>
              <field name="exterior_color"/>
            </group>
            <group>
              <field name="distance_travelled"/>
              <field name="distance_uom" widget="radio"/>
              <field name="branding"/>
              <field name="declaration"/>
              <field name="carfax_declaration"/>
            </group>
          </group>

          <group string="NHTSA / Specs">
            <group>
              <field name="manufacturer" readonly="1"/>
              <field name="plant_country" readonly="1"/>
              <field name="engine_cylinders" readonly="1"/>
              <field name="displacement" readonly="1"/>
            </group>
            <group>
              <field name="fuel_type" readonly="1"/>
              <field name="fuel_type_secondary" readonly="1"/>
              <field name="electrification_level" readonly="1"/>
              <field name="is_dg" readonly="1"/>
            </group>
          </group>

          <group string="Purchase">
            <group>
              <field name="purchase_date"/>
              <field name="seller_partner_id" context="{'default_is_company': True}"/>
              <field name="seller"/>
              <field name="lot_number"/>
            </group>
            <group>
              <field name="currency_id"/>
              <field name="purchase_price"/>
              <field name="auction_fees"/>
              <field name="other_fees"/>
              <field name="total_cost" readonly="1"/>
              <field name="create_vendor_bill_on_save"/>
              <field name="vendor_bill_id" readonly="1"/>
            </group>
          </group>

          <group string="Commercial">
            <group>
              <field name="buyer_partner_id" context="{'default_customer_rank': 1}"/>
              <field name="expected_sale_price"/>
              <field name="sale_price"/>
              <field name="repair_estimate"/>
              <field name="profit" readonly="1"/>
            </group>
            <group>
              <div class="o_form_label" invisible="not total_loss">Vehicle has been declared a total loss by the insurer</div>
              <field name="total_loss"/>
              <div class="o_form_label" invisible="not warranty_cancelled">The manufacturerâ€™s warranty has been cancelled</div>
              <field name="warranty_cancelled"/>
              <field name="customer_invoice_id" readonly="1"/>
            </group>
          </group>

          <notebook>
            <page string="Notes">
              <field name="notes"/>
            </page>
            <page string="Decoder">
              <field name="vin_decoder_raw" widget="json" readonly="1"/>
              <field name="vin_decoded_at" readonly="1"/>
            </page>
            <page string="Chatter">
              <chatter/>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>
</odoo>