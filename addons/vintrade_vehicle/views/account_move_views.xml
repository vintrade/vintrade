<odoo>
  <record id="view_move_form_add_vehicle" model="ir.ui.view">
    <field name="name">account.move.form.vin.vehicle</field>
    <field name="model">account.move</field>
    <field name="inherit_id" ref="account.view_move_form"/>
    <field name="arch" type="xml">
      <xpath expr="//field[@name='invoice_line_ids']/tree/field[@name='price_unit']" position="after">
        <field name="vehicle_id" optional="show"/>
      </xpath>
      <xpath expr="//field[@name='invoice_line_ids']/form//field[@name='price_unit']" position="after">
        <field name="vehicle_id"/>
      </xpath>
    </field>
  </record>
</odoo>