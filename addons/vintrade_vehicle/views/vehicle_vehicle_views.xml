\f0\fs24 \cf0 <?xml version="1.0" encoding="utf-8"?>\
<odoo>\
    <data>\
\
        <!-- Vehicle Tree View -->\
        <record id="view_vehicle_vehicle_tree" model="ir.ui.view">\
            <field name="name">vehicle.vehicle.tree</field>\
            <field name="model">vehicle.vehicle</field>\
            <field name="arch" type="xml">\
                <tree string="Vehicles" sample="1">\
                    <field name="vin"/>\
                    <field name="year"/>\
                    <field name="make"/>\
                    <field name="model"/>\
                    <field name="propulsion" optional="show"/>\
                    <field name="customer_id" optional="show"/>\
                    <field name="status" decoration-success="status == 'delivered'" \
                           decoration-info="status in ('purchased', 'paid')"\
                           decoration-warning="status in ('in_transit', 'on_truck')"\
                           decoration-danger="status == 'exception'"\
                           widget="badge"/>\
                    <field name="purchase_price" sum="Total" optional="show"/>\
                    <field name="total_cost" sum="Total" optional="show"/>\
                    <field name="currency_id" invisible="1"/>\
                </tree>\
            </field>\
        </record>\
\
        <!-- Vehicle Form View -->\
        <record id="view_vehicle_vehicle_form" model="ir.ui.view">\
            <field name="name">vehicle.vehicle.form</field>\
            <field name="model">vehicle.vehicle</field>\
            <field name="arch" type="xml">\
                <form string="Vehicle">\
                    <header>\
                        <button name="action_set_purchased" string="Mark Purchased" \
                                type="object" class="oe_highlight"\
                                invisible="status != 'draft'"/>\
                        <button name="action_set_paid" string="Mark Paid" \
                                type="object" class="oe_highlight"\
                                invisible="status != 'purchased'"/>\
                        <button name="action_set_delivered" string="Mark Delivered" \
                                type="object" class="oe_highlight"\
                                invisible="status not in ('planned', 'on_truck')"/>\
                        <field name="status" widget="statusbar" \
                               statusbar_visible="draft,purchased,paid,loaded,in_transit,customs_cleared,delivered"/>\
                    </header>\
                    <sheet>\
                        <div class="oe_button_box" name="button_box">\
                            <button class="oe_stat_button" type="object" \
                                    name="toggle_active" icon="fa-archive">\
                                <field name="active" widget="boolean_button" \
                                       options='\{"terminology": "archive"\}'/>\
                            </button>\
                        </div>\
                        <div class="oe_title">\
                            <h1>\
                                <field name="name" placeholder="Vehicle Name"/>\
                            </h1>\
                        </div>\
                        <group>\
                            <group string="Vehicle Information">\
                                <field name="vin" placeholder="17-character VIN"/>\
                                <field name="make"/>\
                                <field name="model"/>\
                                <field name="year"/>\
                                <field name="body_type"/>\
                                <field name="color"/>\
                            </group>\
                            <group string="Propulsion &amp; Fuel">\
                                <field name="propulsion" readonly="1"/>\
                                <field name="is_ev" readonly="1"/>\
                                <field name="is_hybrid" readonly="1"/>\
                                <field name="fuel_type_primary"/>\
                                <field name="fuel_type_secondary"/>\
                                <field name="electrification_level"/>\
                            </group>\
                        </group>\
                        <group>\
                            <group string="Parties">\
                                <field name="customer_id" \
                                       options="\{'no_create': True, 'no_open': True\}"/>\
                                <field name="end_client_id" \
                                       options="\{'no_create': True, 'no_open': True\}"/>\
                            </group>\
                            <group string="Destination">\
                                <field name="final_dest_country"/>\
                                <field name="final_dest_city"/>\
                                <field name="final_dest_address"/>\
                            </group>\
                        </group>\
                        <group>\
                            <group string="Financial - Purchase">\
                                <field name="currency_id" invisible="1"/>\
                                <field name="purchase_price" widget="monetary" \
                                       options="\{'currency_field': 'currency_id'\}"/>\
                                <field name="purchase_date"/>\
                            </group>\
                            <group string="Financial - Transport">\
                                <field name="na_dray_cost" widget="monetary" \
                                       options="\{'currency_field': 'currency_id'\}"/>\
                                <field name="ocean_cost" widget="monetary" \
                                       options="\{'currency_field': 'currency_id'\}"/>\
                                <field name="extra_cost_total" widget="monetary" \
                                       options="\{'currency_field': 'currency_id'\}" readonly="1"/>\
                                <field name="transport_total_cost" widget="monetary" \
                                       options="\{'currency_field': 'currency_id'\}" readonly="1" \
                                       class="oe_subtotal_footer_separator"/>\
                                <field name="total_cost" widget="monetary" \
                                       options="\{'currency_field': 'currency_id'\}" readonly="1"\
                                       class="oe_subtotal_footer"/>\
                            </group>\
                        </group>\
                        <group>\
                            <group string="Related Documents">\
                                <field name="sale_order_id"/>\
                            </group>\
                            <group string="Delivery">\
                                <field name="eta_port"/>\
                                <field name="delivery_date"/>\
                            </group>\
                        </group>\
                        <notebook>\
                            <page string="Notes">\
                                <field name="notes" placeholder="Internal notes about this vehicle..."/>\
                            </page>\
                            <page string="Invoices" invisible="not invoice_ids">\
                                <field name="invoice_ids" readonly="1">\
                                    <tree>\
                                        <field name="name"/>\
                                        <field name="invoice_date"/>\
                                        <field name="amount_total"/>\
                                        <field name="state"/>\
                                    </tree>\
                                </field>\
                            </page>\
                        </notebook>\
                    </sheet>\
                    <div class="oe_chatter">\
                        <field name="message_follower_ids"/>\
                        <field name="activity_ids"/>\
                        <field name="message_ids"/>\
                    </div>\
                </form>\
            </field>\
        </record>\
\
        <!-- Vehicle Search View -->\
        <record id="view_vehicle_vehicle_search" model="ir.ui.view">\
            <field name="name">vehicle.vehicle.search</field>\
            <field name="model">vehicle.vehicle</field>\
            <field name="arch" type="xml">\
                <search string="Search Vehicles">\
                    <field name="vin"/>\
                    <field name="make"/>\
                    <field name="model"/>\
                    <field name="customer_id"/>\
                    <field name="year"/>\
                    <separator/>\
                    <filter string="Draft" name="draft" domain="[('status', '=', 'draft')]"/>\
                    <filter string="In Transit" name="in_transit" \
                            domain="[('status', 'in', ['loaded', 'in_transit', 'arrived_nl'])]"/>\
                    <filter string="Ready for Delivery" name="ready_delivery" \
                            domain="[('status', 'in', ['customs_cleared', 'planned'])]"/>\
                    <filter string="Delivered" name="delivered" domain="[('status', '=', 'delivered')]"/>\
                    <separator/>\
                    <filter string="Electric Vehicles" name="ev" domain="[('is_ev', '=', True)]"/>\
                    <filter string="Hybrid Vehicles" name="hybrid" domain="[('is_hybrid', '=', True)]"/>\
                    <separator/>\
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>\
                    <group expand="0" string="Group By">\
                        <filter string="Status" name="group_status" context="\{'group_by': 'status'\}"/>\
                        <filter string="Customer" name="group_customer" context="\{'group_by': 'customer_id'\}"/>\
                        <filter string="Propulsion Type" name="group_propulsion" context="\{'group_by': 'propulsion'\}"/>\
                        <filter string="Make" name="group_make" context="\{'group_by': 'make'\}"/>\
                        <filter string="Year" name="group_year" context="\{'group_by': 'year'\}"/>\
                    </group>\
                </search>\
            </field>\
        </record>\
\
        <!-- Vehicle Kanban View -->\
        <record id="view_vehicle_vehicle_kanban" model="ir.ui.view">\
            <field name="name">vehicle.vehicle.kanban</field>\
            <field name="model">vehicle.vehicle</field>\
            <field name="arch" type="xml">\
                <kanban class="o_kanban_mobile" sample="1">\
                    <field name="name"/>\
                    <field name="vin"/>\
                    <field name="status"/>\
                    <field name="customer_id"/>\
                    <field name="propulsion"/>\
                    <templates>\
                        <t t-name="kanban-box">\
                            <div class="oe_kanban_global_click">\
                                <div class="o_kanban_record_top">\
                                    <div class="o_kanban_record_headings">\
                                        <strong class="o_kanban_record_title">\
                                            <field name="name"/>\
                                        </strong>\
                                    </div>\
                                    <span class="float-end badge rounded-pill" \
                                          t-att-class="\{'text-bg-success': record.status.raw_value == 'delivered',\
                                                       'text-bg-info': ['purchased', 'paid'].includes(record.status.raw_value),\
                                                       'text-bg-warning': ['in_transit', 'on_truck'].includes(record.status.raw_value),\
                                                       'text-bg-danger': record.status.raw_value == 'exception'\}">\
					<field name="status"/>\
                                    </span>\
                                </div>\
                                <div class="o_kanban_record_body">\
                                    <field name="vin"/>\
                                    <div t-if="record.customer_id.value">\
                                        Customer: <field name="customer_id"/>\
                                    </div>\
                                </div>\
                                <div class="o_kanban_record_bottom">\
                                    <div class="oe_kanban_bottom_left">\
                                        <span class="badge text-bg-secondary">\
                                            <field name="propulsion"/>\
                                        </span>\
                                    </div>\
                                </div>\
                            </div>\
                        </t>\
                    </templates>\
                </kanban>\
            </field>\
        </record>\
\
        <!-- Vehicle Action -->\
        <record id="action_vehicle_vehicle" model="ir.actions.act_window">\
            <field name="name">Vehicles</field>\
            <field name="res_model">vehicle.vehicle</field>\
            <field name="view_mode">tree,kanban,form</field>\
            <field name="search_view_id" ref="view_vehicle_vehicle_search"/>\
            <field name="context">\{'search_default_draft': 1\}</field>\
            <field name="help" type="html">\
                <p class="o_view_nocontent_smiling_face">\
                    Create your first vehicle\
                </p>\
                <p>\
                    Track vehicles through the complete lifecycle from purchase to delivery.\
                </p>\
            </field>\
        </record>\
\
    </data>\
</odoo>}