<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        
        <!-- Security Categories -->
        <record id="module_category_vintrade" model="ir.module.category">
            <field name="name">VIN Trade</field>
            <field name="description">Manage vehicle import/export operations</field>
            <field name="sequence">20</field>
        </record>

        <!-- User Groups -->
        <record id="group_vintrade_user" model="res.groups">
            <field name="name">User</field>
            <field name="category_id" ref="module_category_vintrade"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_vintrade_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="module_category_vintrade"/>
            <field name="implied_ids" eval="[(4, ref('group_vintrade_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

        <!-- Record Rules -->
        <record id="vehicle_vehicle_rule_user" model="ir.rule">
            <field name="name">Vehicle: User - Own vehicles</field>
            <field name="model_id" ref="model_vehicle_vehicle"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_vintrade_user'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="False"/>
        </record>

        <record id="vehicle_vehicle_rule_manager" model="ir.rule">
            <field name="name">Vehicle: Manager - All vehicles</field>
            <field name="model_id" ref="model_vehicle_vehicle"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('group_vintrade_manager'))]"/>
            <field name="perm_read" eval="True"/>
            <field name="perm_write" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
        </record>

    </data>
</odoo>