<?xml version="1.0" encoding="utf-8"?>
<odoo>
  <record id="view_wallet_tree" model="ir.ui.view">
    <field name="name">vin.wallet.move.tree</field>
    <field name="model">vin.wallet.move</field>
    <field name="arch" type="xml">
      <tree>
        <field name="date"/>
        <field name="partner_id"/>
        <field name="company_id"/>
        <field name="amount"/>
        <field name="note"/>
        <field name="move_id"/>
      </tree>
    </field>
  </record>

  <record id="view_wallet_form" model="ir.ui.view">
    <field name="name">vin.wallet.move.form</field>
    <field name="model">vin.wallet.move</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="date"/>
            <field name="partner_id"/>
            <field name="company_id"/>
            <field name="amount"/>
            <field name="note"/>
            <field name="move_id" readonly="1"/>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="action_wallet_moves" model="ir.actions.act_window">
    <field name="name">Wallet</field>
    <field name="res_model">vin.wallet.move</field>
    <field name="view_mode">tree,form</field>
  </record>

  <!-- Put Wallet directly under the Ledger root -->
  <menuitem id="menu_wallet_moves"
            parent="menu_vin_ledger_root"
            action="action_wallet_moves"
            sequence="10"/>
</odoo>